{
  "compilerOptions": {
    "skipLibCheck": true,
    // "verbatimModuleSyntax": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    },

    // "module": "ESNext",

    // "noEmit": true,
    "lib": ["es2022"]
  },
  "include": ["src/main.ts", "src/browser/preload.ts"]
}
